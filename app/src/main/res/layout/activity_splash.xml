<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_splash"
    tools:context="com.bill.recreation.mvp.ui.activities.SplashActivity">

    <ImageView
        android:id="@+id/logo_outer_iv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:alpha="0"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/big_medium"
        tools:alpha="1" />

    <TextView
        android:id="@+id/my_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:alpha="0"
        android:text="@string/my_sign"
        android:textColor="@color/white"
        android:textSize="@dimen/big_medium"
        tools:alpha="1" />

</FrameLayout>